#########
## Configured by Ansible
#########

# Loopback interface
auto lo
iface lo inet loopback
  address 10.3.3.3/32
  vxrd-src-ip 10.3.3.3
  vxrd-svcnode-ip 10.255.255.255
  alias loopback interface

# Management interface
auto eth0
iface eth0 inet dhcp
  alias management interface

# Port to Server03
auto swp1
iface swp1
  alias to Server03
  bridge-access 13

# Port to Server04
auto swp2
iface swp2
  alias to Server04
  bridge-acces 24

# Port to Spine01
auto swp51
iface swp51
  alias to Spine01

auto bridge
iface bridge
  bridge-vlan-aware yes
  bridge-ports swp1 swp2 vni13 vni24
  bridge-vids 13 24
  bridge-pvid 1

# VxLAN Tunnel for Server1-Server3 (Vlan 13)
auto vni13
iface vni13
  vxlan-id 13
  vxlan-local-tunnelip 10.3.3.3

#VxLAN Tunnel for Server2-Server4 (Vlan 24)
auto vni24
iface vni24
  vxlan-id 24
  vxlan-local-tunnelip 10.3.3.3
